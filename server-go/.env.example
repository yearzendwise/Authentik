# Email Tracking Go Server Environment Configuration
# =======================================================

# Server Configuration
# --------------------
PORT=8095
HOST=0.0.0.0

# Temporal Configuration
# ---------------------
TEMPORAL_HOST=172.18.0.4:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_RETRY_ATTEMPTS=5
TEMPORAL_RETRY_DELAY=2s
TEMPORAL_CONNECTION_TIMEOUT=10s

# Security Configuration
# ----------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256

# Email Tracking Configuration
# ----------------------------
EMAIL_TRACKING_STORAGE=memory
EMAIL_TRACKING_RETENTION_DAYS=30

# Logging Configuration
# --------------------
LOG_LEVEL=info
LOG_FORMAT=json

# Development Configuration
# -------------------------
ENVIRONMENT=development
DEVELOPMENT_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS_DEBUG=false

# External Services
# ----------------
MAIN_APP_URL=http://localhost:5000

# Health Check Configuration
# -------------------------
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DETAILED=true

# Performance Configuration
# -------------------------
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30

# Metrics Configuration
# --------------------
ENABLE_METRICS=false
METRICS_PORT=9090
